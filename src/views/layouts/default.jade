include ../base
doctype html
+ie('if IE 8')
    html(lang="en").ie8.no-js
+ie('if IE 9')
    html(lang="en").ie9.no-js
+ie('if !IE')
    html(lang="en").no-js
head
    title Hai
    +viewport
    meta(charset=site.encoding)
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    block styles
        +css-style("default.css")

body.section-top-fixed
    //section#top
    section#top.navbar.navbar-fixed-top
        //header.top
        header.top
            .menu-toggler.sidebar-toggler
                i.fa.fa-long-arrow-left

            .page-logo
                +a Logo

            //nav.top-nav
            +a.menu-toggler.responsive-toggler(data-toggle="collapse" data-target=".navbar-collapse")
            .top-menu
                ul.nav.navbar-nav
    .clearfix

    //#page
    section#page
        //section#side
        .sidebar-wrapper
            //section#side aside
            nav.sidebar-nav.navbar-collapse.collapse

                ul.sidebar-nav-menu(data-keep-expanded="false" data-auto-scroll="true" data-slide-speed="200")
                    li.sidebar-toggler-wrapper
                        .sidebar-toggler
                    li.start
                        a(href='javascript:;')
                            i.fa.fa-home
                            span.title  Dashboard
                            span.arrow
                        ul.sub-menu
                            +lia
                                i.fa.fa-bar-chart
                                |  Charts
                            +lia
                                i.fa.fa-bitcoin
                                |  Bitcoins
                            +lia
                                i.fa.fa-cart-plus
                                |  Your basket
                    li
                        a(href='javascript:;')
                            i.fa.fa-archive
                            span.title Data
                            span.arrow
                        ul.sub-menu
                            +lia
                                i.fa.fa-bar-chart
                                | MultiChart
                            +lia
                                i.fa.fa-cloud
                                | Your cloud data
                            li
                                a(href='javascript:;')
                                    i.fa.fa-archive
                                    span.title Data
                                    span.arrow
                                ul.sub-menu
                                    +lia
                                        i.fa.fa-bar-chart
                                        | MultiChart
                                    +lia
                                        i.fa.fa-cloud
                                        | Your cloud data
                                    +lia
                                        i.fa.fa-code
                                        | Code view
        //section#content
        .main-wrapper
            //main
            main
                header.content
                    block header
                        +page-title("Title", "Subtitle")
                        +page-breadcrumbs
                            +breadcrumb("Buttons", false, true, true)
                div.content
                    block content
                        .row
                            .col-md-12
                                | contentsdf
    //section#bottom
    section#bottom
        //footer.bottom
        footer.bottom
            block footer
                p Radicsss

    block script
        script.
            window.PACKADIC_SITE_DATA = !{site_json};

    block scripts
        +js-script('plugins/require.js')
        +js-script('main.js')
