- var currentPath = location.pathname

mixin side-nav(item, level)
    - item.href = item.href || '#';
    - level++;
    - var liClass = (item.href == currentPath ? 'active' : '');
    if item.name
        li(class=liClass)
            a(href=item.href)
                if item.icon
                    i(class="fa " + item.icon)
                span= item.name
                if item.children
                    i.fa.arrow
            if item.children
                ul(data-level=level)
                    each child, index in item.children
                        +side-nav(child, level)


// display menu toggle first

li.side-nav-header
    a(href="#")#side-nav-toggle
        i.fa.fa-exchange
    h4 Navigation


// now loop over the items and call the mixin for each
each item, index in items
    +side-nav(item, 0)

