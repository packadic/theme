
extends ../../layouts/default


block header
    +page-title("Components", "General bootstrap components")
    +page-breadcrumbs
        +breadcrumb("Components", "/components", true)

block content

    .row
        .col-md-6
            +box("Dropdowns", "info")
                .btn-toolbar.btn-toolbar-xs
                    +demo-dropdown-buttons

                    .btn-group
                        button.btn.blue-grey.dropdown-toggle(type='button', data-toggle='dropdown', aria-expanded='false')
                            | Notifications&nbsp;
                            span.caret
                        ul(role="menu").dropdown-menu.dropdown-wide.dropdown-notifications
                            li.header
                                h3 Notifications
                            +dropdown-notification('5 mins', 'bolt', 'label-danger') Serious error occured
                            +dropdown-notification('2 hours', 'info', 'label-info') Logged something cool
                            +dropdown-notification('1 day', 'puzzle-piece', 'label-warning') Module could not load, please refer to the documentation
                            +dropdown-notification('2 days', 'cog', 'label-primary') A falsis, gabalium gratis burgus.
                            +dropdown-notification('3 days', 'list', 'light-green') The heavens of love is full of courage.
                            li.footer
                                a(href='#') View all

                    .btn-group
                        button.btn.amber.dropdown-toggle(type='button', data-toggle='dropdown', aria-expanded='false')
                            | Notifications Inverse&nbsp;
                            span.caret
                        ul(role="menu").dropdown-menu.dropdown-wide.dropdown-notifications.dropdown-menu-inverse
                            li.header
                                h3 Notifications
                            +dropdown-notification('5 mins', 'bolt', 'label-danger') Serious error occured
                            +dropdown-notification('2 hours', 'info', 'label-info') Logged something cool
                            +dropdown-notification('1 day', 'puzzle-piece', 'label-warning') Module could not load, please refer to the documentation
                            +dropdown-notification('2 days', 'cog', 'label-primary') A falsis, gabalium gratis burgus.
                            +dropdown-notification('3 days', 'list', 'light-green') The heavens of love is full of courage.
                            li.footer
                                a(href='#') View all
            .row
                .col-md-6
                    +box("Tooltips", "cog")
                        .btn-group.btn-group-justified
                            +tooltip-btn-demo('Left')
                            +tooltip-btn-demo('Right')
                            +tooltip-btn-demo('Top')
                            +tooltip-btn-demo('Bottom')
                .col-md-6
                    +box("Popovers", "cog")
                        .btn-group.btn-group-justified
                            +popover-btn-demo('Left')
                            +popover-btn-demo('Right')
                            +popover-btn-demo('Top')
                            +popover-btn-demo('Bottom')
        .col-md-3
            +box("Labels and badges", "cog", 260).box-table
                table.table.table-striped.table-hover.table-bordered.no-margin
                    thead
                        tr
                            th Class
                            th.text-center Label
                            th.text-center Badge
                    tbody
                        for state in site.data.theme.states
                            - var text = capitalizeFirst(state);
                            tr
                                td= text
                                td.text-center
                                    span.label(class="label-" + state) Default
                                td.text-center
                                    span.badge(class="badge-" + state) 5
                        for color in site.data.theme.colors
                            - var text = capitalizeFirst(color);
                            tr
                                td= text
                                td.text-center
                                    span.label(class=color) Default
                                td.text-center
                                    span.badge(class=color) 5
        .col-md-3.bs-material
            +box("List group", "list", 260)
                .list-group
                    .list-group-item
                        .row-action-primary
                            i.fa.fa-folder
                        .row-content
                            .action-secondary
                                i.mdi-material-info
                            h4.list-group-item-heading Tile with an icon
                            p.list-group-item-text Donec id elit non mi porta gravida at eget metus.
                    .list-group-separator
