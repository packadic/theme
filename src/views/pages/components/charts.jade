extends ../../layouts/default

block header
    +page-title("Charts n Graphs", "Grafix wauw")
    +page-breadcrumbs
        +breadcrumb("Components", "/components")
        +breadcrumb("Modals", "/components/modals", true)


block content
    #charts-demo
        .row
            .col-md-4
                +box("Line Chart")
                    canvas#chartjs_line
            .col-md-4
                +box("Bar Chart")
                    canvas#chartjs_bar
            .col-md-4
                +box("Radar Chart")
                    canvas#chartjs_radar

        .row
            .col-md-4
                +box("Pie chart 1")
                    #pie_chart_1.chart(style='width:100%;height:250px;')
            .col-md-4
                +box("Pie chart 2")
                    #pie_chart_2.chart(style='width:100%;height:250px;')
            .col-md-4
                +box("Pie chart 3")
                    #pie_chart_3.chart(style='width:100%;height:250px;')
        .row
            .col-md-12
                +box("Pie chart 4")
                    #chart_4.chart(style='width:100%;height:250px;')




block append styles
    style.
        .chart,
        .pie,
        .bars {
            overflow: hidden;
            height: 300px;
            width: 100%;
            font-family: "Open Sans", sans-serif !important;
            font-size: 14px;
        }

        .item-list.table .percent {
            width: 30px;
            float: right;
            margin-right: 10px;
            margin-top: 3px;
        }

        .chart-tooltip {
            clear: both;
            z-index: 100;
            background-color: #736e6e !important;
            padding: 5px !important;
            color: #fff;
        }

        .chart-tooltip .label {
            clear: both;
            display: block;
            margin-bottom: 2px;
        }
