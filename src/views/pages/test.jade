                                    i.fa.fa-graph
                                    | New Dashboard #2
                        li
                            a(href='javascript:;')
                                i.fa.fa-basket
                                span.title eCommerce
                                span.arrow


            //section#content
            .main-wrapper
                //main
                main
                    //header.content
                    .row
                        .col-md-12
                            | contentsdf
