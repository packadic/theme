                +a.menu-toggler.responsive-toggler(data-toggle="collapse" data-target=".navbar-collapse")
                .top-menu
                    ul.nav.navbar-nav
        .clearfix
        //#page
        section#page
            //section#side
            .sidebar-wrapper
                //section#side aside
                nav.sidebar-nav.navbar-collapse.collapse

                    ul.sidebar-nav-menu
                        li.sidebar-toggler-wrapper
                            .sidebar-toggler
                        li.start
                            a(href='javascript:;')
                                i.fa.fa-home
                                span.title Dashboard
                                span.arrow
                            ul.sub-menu
                                +lia
