extends ../layouts/default
block header
    +page-title("Home", "Welcome!")

mixin timeline-item(color, timeAgo)
    li(class=color)
        .timeline-icon
        .timeline-body
            .timeline-content
                block
                span.time
                    i.fa.fa-clock-o
                    | #{timeAgo} ago
mixin a-name()
    a.name(href='#')
        block

block content
    #dashboard-demo
        .row
            .col-md-3
                +box.widget.widget-stat.blue
                    .bg-icon
                        i.fa.fa-users
                    .details
                        h3 102
                        p Users
            .col-md-3
                +box.widget.widget-stat.blue-light
                    .bg-icon
                        i.fa.fa-info
                    .details
                        h3 11
                        p Notifications
            .col-md-3
                +box.widget.widget-stat-alt.orange
                    .bg-icon
                        i.fa.fa-file
                    .details
                        h3 44
                        p Documents
            .col-md-3
                +box.widget.widget-stat-alt.green
                    .bg-icon
                        i.fa.fa-usd
                    .details
                        h3 1354,22
                        p Donated
        .row
            .col-md-6
                +box("Recent comments").no-padding
                    ul.list-group.text-grey
                        li.list-group-item
                            p
                                a.text-info(href="#") @Kevin Hopland
                                | &nbsp; Lorem ipsum tralalal with the left of the right and the both inside
                            small.block.text-muted
