include ../../../base
extends ../../../layouts/default

mixin css-positioning-row(className)
    tr
        td
            code.no-bg=className
        td
            code.highlighter.lang-css.no-bg
                block

block append styles
    +css-vendor("highlightjs/styles/googlecode.css")
block header
    +page-title("Utility classes", "Extra utility CSS classes")
    +page-breadcrumbs
        +breadcrumb("Components", "/components")
        +breadcrumb("Utility classes", "/components/utility-classes", true)


block content
    .row
        .col-md-6
            +box("Positioning", "info", 260).box-table
                table.table.table-striped.table-hover.table-bordered.table-condensed
                    thead
                        tr
                            th Class
                            th Applies
                    tbody
                        - var posNames = ['margin', 'padding']
                        - var posDirections = ['', '-top', '-bottom', '-left', '-right'];
                        - var posTypes = { no: '0', small: '4px', mid: '8px', large: '30px', 'extra-large': '60px', 'super-large': '90px' }
                        for name in posNames
                            for size, prefix in posTypes
                                for direction in posDirections
                                    +css-positioning-row(prefix + '-' + name + direction) #{name + direction}: #{size} !important;


        .col-md-6
            +box("Labels and badges", "cog", 260).box-table
                table.table.table-striped.table-hover.table-bordered
                    thead
                        tr
                            th Class
                            th Label
                            th Badge
                    tbody
                        for state in site.data.theme.states
                            - var text = capitalizeFirst(state);
                            tr
                                td= text
                                td
                                    span.label(class="label-" + state) Default
                                td
                                    span.badge(class="badge-" + state) 5
    .row
        .col-md-6
            +box("Modals", "cog")
                p a

        .col-md-6
            +box("Buttons", "cog")
                | adf

    .row
        .col-md-6
            +box("Buttons", "cog")
                a.btn.btn-primary Primary
        .col-md-6
            +box("Buttons", "cog")
                | adf

